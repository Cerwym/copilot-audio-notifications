{
  "name": "copilot-audio-notifications",
  "displayName": "Copilot Audio Notifications",
  "description": "Audio notifications when Copilot requires user input",
  "version": "0.0.1",
  "publisher": "PeterLockett",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cerwym/copilot-audio-notifications.git"
  },
  "bugs": {
    "url": "https://github.com/Cerwym/copilot-audio-notifications/issues"
  },
  "homepage": "https://github.com/Cerwym/copilot-audio-notifications#readme",
  "sponsor": {
    "url": "https://ko-fi.com/peterlockett"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotAudioNotifications.toggle",
        "title": "Toggle Audio Notifications",
        "category": "Copilot Audio",
        "icon": "$(bell)"
      },
      {
        "command": "copilotAudioNotifications.testSound",
        "title": "Test Notification Sound",
        "category": "Copilot Audio",
        "icon": "$(play)"
      },
      {
        "command": "copilotAudioNotifications.selectSound",
        "title": "Select Custom Sound File...",
        "category": "Copilot Audio",
        "icon": "$(file-media)"
      },
      {
        "command": "copilotAudioNotifications.clearSound",
        "title": "Reset to Default Sound",
        "category": "Copilot Audio",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotAudioNotifications.openSettings",
        "title": "Open Settings",
        "category": "Copilot Audio",
        "icon": "$(settings-gear)"
      },
      {
        "command": "copilotAudioNotifications.showInfo",
        "title": "Show Extension Info",
        "category": "Copilot Audio",
        "icon": "$(info)"
      },
      {
        "command": "copilotAudioNotifications.donate",
        "title": "â˜• Support Development (Ko-fi)",
        "category": "Copilot Audio",
        "icon": "$(heart)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "copilotAudioNotifications.toggle"
        },
        {
          "command": "copilotAudioNotifications.testSound"
        },
        {
          "command": "copilotAudioNotifications.selectSound"
        },
        {
          "command": "copilotAudioNotifications.clearSound"
        },
        {
          "command": "copilotAudioNotifications.openSettings"
        },
        {
          "command": "copilotAudioNotifications.showInfo"
        },
        {
          "command": "copilotAudioNotifications.donate"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Audio Notifications",
      "properties": {
        "copilotAudioNotifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable audio notifications when Copilot requires user input"
        },
        "copilotAudioNotifications.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Path to custom notification sound file (leave empty for system default)",
          "scope": "application"
        },
        "copilotAudioNotifications.volume": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "Volume level for notification sounds (0-100%)"
        },
        "copilotAudioNotifications.inactivityTimeoutSeconds": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "Seconds of inactivity before checking for pending interactions"
        },
        "copilotAudioNotifications.repeatNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Repeat notifications every few minutes until user returns"
        },
        "copilotAudioNotifications.repeatIntervalMinutes": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Minutes between repeated notifications (when enabled)"
        }
      }
    },
    "keybindings": [
      {
        "command": "copilotAudioNotifications.toggle",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "copilotAudioNotifications.testSound",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
